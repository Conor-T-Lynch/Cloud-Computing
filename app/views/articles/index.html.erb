<p style="color: green"><%= notice %></p>

<% content_for :title, "Articles" %>

<h1>Articles</h1>

<%= form_with url: search_results_articles_path, method: :get, local: true do %>
  <%= text_field_tag :title, params[:title], placeholder: "Search articles..." %>
  <%= submit_tag "Search" %>
<% end %>


<!-- New Table Layout -->
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= truncate(article.body, length: 100) %></td>
        <td><%= link_to 'Show', article, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Article', new_article_path, class: 'btn btn-primary' %>
